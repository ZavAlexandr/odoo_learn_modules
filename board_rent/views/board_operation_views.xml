<odoo>
    <data>

        <record id="board_rent.board_operation_view_list" model="ir.ui.view">
            <field name="name">Board operations</field>
            <field name="model">board_rent.board_operation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

        <record id="board_rent.board_operation_search" model="ir.ui.view">
            <field name="name">Board operations</field>
            <field name="model">board_rent.board_operation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="title"/>
                </search>
            </field>
        </record>

        <record id="board_rent.board_operation_view_form" model="ir.ui.view">
            <field name="name">Board operations</field>
            <field name="model">board_rent.board_operation</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="title"/>
                        <field name="id" readonly="1"/>
                        <field name="price"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="board_rent.board_operation_action" model="ir.actions.act_window">
            <field name="name">Board operations</field>
            <field name="res_model">board_rent.board_operation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
