<odoo>
    <data>

        <template id="lead_form_ua" name="Lead form">

            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
                  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
                  crossorigin="anonymous"/>

            <form action="/add_new_lead" class="generated-form" method="POST" target="_self">
                <div class="form-group">
                    <fieldset>
                        <legend>Контактні дані:</legend>
                        <label for="client_name">Ваше ім'я:</label>
                        <br/>
                        <input id="client_name" name="client_name" type="text" class="form-control form-control-sm" required="required"/>

                        <label for="client_email">Email:</label>
                        <br/>
                        <input id="client_email" name="client_email" type="text" class="form-control form-control-sm" required="required"/>

                        <label for="client_phone">Телефон:</label>
                        <br/>
                        <input id="client_phone" name="client_phone" type="text" class="form-control form-control-sm" required="required"/>

                        <label for="subject">Повідомлення:</label>
                        <br/>
                        <textarea id="subject" name="subject" rows="3" class="form-control form-control-sm"/>
                        <br/>

                        <input type="hidden" id="lang" name="lang" value="ua"/>

                        <input type="submit" value="Надіслати" class="btn btn-primary"/>
                    </fieldset>
                </div>
            </form>

        </template>

    </data>
</odoo>