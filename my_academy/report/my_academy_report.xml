<odoo>

    <record id="my_academy.session_report" model="ir.actions.report">
        <field name="name">Session report</field>
        <field name="model">my_academy.session</field>
        <field name="report_name">my_academy.session_report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_file">my_academy.session_report</field>
    </record>

    <template id="my_academy.session_report_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1 t-field="doc.ses_name"/>
                        <p>From
                            <span t-field="doc.startdate"/>
                            to
                            <span t-field="doc.enddate"/>
                        </p>
                        <b>Attendants:</b>
                        <ul>
                            <t t-foreach="doc.attendant_lines_ids" t-as="docline">
                                <li><span t-field="docline.partner_id"/></li>
                            </t>
                        </ul>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
