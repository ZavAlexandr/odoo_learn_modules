<odoo>
    <data>
        <record model="ir.ui.view" id="open_academy.view_partner_form">
            <field name="name">open_academy.view_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_type']" position="before">
                    <group>
                        <field name="instructor" title="Is instructor" string="Is instructor"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>